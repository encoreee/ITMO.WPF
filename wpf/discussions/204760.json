&nbsp; &nbsp;<span style=\"color:Blue\">If</span> (GV1.Items(GV1.Items.IndexOf(GV1.SelectedItem))(<span style=\"color:#A31515\">&quot;ITEMCODE&quot;</span>).ToString = <span style=\"color:Blue\">String</span>.Empty) <span style=\"color:Blue\">Then</span>\r\n&nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;MessageBox.Show(<span style=\"color:#A31515\">&quot;Please Select Item Before Schedule Settings&quot;</span>, <span style=\"color:#A31515\">&quot;Data Error&quot;</span>, MessageBoxButton.OK, MessageBoxImage.Information)\r\n&nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<span style=\"color:Blue\">Return</span>\r\n&nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<span style=\"color:Blue\">Else</span>\r\n&nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;FillSchedule(GV1.Items(GV1.Items.IndexOf(GV1.SelectedItem))(<span style=\"color:#A31515\">&quot;ITEMCODE&quot;</span>).ToString)\r\n&nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<span style=\"color:Blue\">End</span> <span style=\"color:Blue\">If</span>\r\n&nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<span style=\"color:Blue\">End</span> <span style=\"color:Blue\">If</span>\r\n&nbsp;&nbsp; &nbsp; &nbsp; &nbsp;<span style=\"color:Blue\">End</span> <span style=\"color:Blue\">If</span>\r\n\r\n&nbsp;&nbsp; &nbsp;<span style=\"color:Blue\">End</span> <span style=\"color:Blue\">Sub</span>\r\n</pre>\r\n</div>\r\n<br></span></pre>\r\n<pre style=\"font-weight:inherit;font-style:inherit;font-family:inherit;list-style-type:none;text-decoration:none;word-wrap:break-word;padding:0px;margin:0px;border:0px none initial\"><span style=\"font-weight:inherit;font-style:inherit;font-family:inherit;color:blue;padding:0px;margin:0px;border:0px initial initial\"><br></span></pre>\r\n<pre style=\"font-weight:inherit;font-style:inherit;font-family:inherit;list-style-type:none;text-decoration:none;word-wrap:break-word;padding:0px;margin:0